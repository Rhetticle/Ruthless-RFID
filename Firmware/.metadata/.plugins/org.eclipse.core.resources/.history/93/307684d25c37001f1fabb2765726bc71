#include "commands.h"
#include "ruthlessfs.h"
#include "stm32f4xx.h"
#include <stdint.h>
#include <stdio.h>

CMD_StatusTypeDef cmd_ls () {
	char** file_names;
	if (get_all_files(file_names) != RFS_OK) {
		return CMD_LS_ERROR;
	}

	for (int i = 0; i < sizeof(file_names)/sizeof(file_names[0]); i++) {
		printf("%s\r\n", file_names[i]);
	}
	return CMD_OK;
}
