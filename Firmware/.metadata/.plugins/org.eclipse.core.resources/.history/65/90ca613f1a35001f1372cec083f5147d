//Home screen
const Screen SCRN_Home = {
		.datsize = sizeof(HOME_SCREEN)/sizeof(HOME_SCREEN[0]),
		.selsize = sizeof(HOME_SEL)/sizeof(HOME_SEL[0]),
		.data = HOME_SCREEN,
		.dataloc = HOME_DATLOC,
		.seldata = HOME_SEL,
};

